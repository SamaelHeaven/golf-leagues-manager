{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@application/*": ["src/application/*"],
      "@backend/*": ["src/backend/*"],
      "@common/*": ["src/common/*"]
    }
  }
}
